---
import Typo from "@components/Base/Typo.astro";

interface Props {
  text: string;
  url: string;
  img: string;
}

const { text, url, img } = Astro.props;
---

<a href={url}>
  <div
    class='relative h-full aspect-square bg-slate-200 dark:bg-stone-800 rounded-lg shadow dark:shadow-sm-light'
  >
    <img src={img} alt={text} class='h-full object-cover rounded-lg' />
    <div class='text-white above-img'>
      <img
        src='/assets/icons/zoom-in.svg'
        alt='🔍'
        width='32px'
        class='invert'
      />
      <Typo variant='body2' color="text-white">{text}</Typo>
    </div>
  </div>
</a>
