---
interface Props {
  text: string;
  url: string;
  img: string;
}

const { text, url, img } = Astro.props;
---

<a href={url}>
  <div
    class='relative h-full aspect-square bg-slate-200 dark:bg-stone-800 rounded-lg'
  >
    <img src={img} alt={text} class='h-full object-cover rounded-lg' />
    <div class='text-white above-img'>
      <img
        src='/assets/icons/zoom-in.svg'
        alt='🔍'
        width='32px'
        class='invert'
      />
      {text}
    </div>
  </div>
</a>

