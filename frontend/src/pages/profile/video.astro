---
import IconButton from "@components/Base/IconButton.astro";
import Logo from "@components/Header/Logo.astro";
import BaseLayout from "@layouts/BaseLayout.astro";
---

<BaseLayout
  title='Sobre mim'
  description='Saiba um pouco mais sobre quem sou...'
>
  <div
    class='icon-fechar-video absolute z-10 flex justify-between w-full p-4 drop-shadow-md'
  >
    <Logo />
    <IconButton icon='close' href='/' size={2.5} />
  </div>
  <div
    class='container-video flex justify-center items-center w-full h-dvh'
    id='vid'
  >
    <video
      src='/assets/videos/profile.mp4'
      autoplay
      controls
      class='shadow-xl w-full h-full object-cover rounded-none sm:w-auto sm:h-auto sm:rounded-lg'
    ></video>
  </div>
</BaseLayout>
