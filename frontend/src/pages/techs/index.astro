>
  <Main>
    <Header />
    <NavBar client:only='react' />

    <div 
    class='grid grid-cols-2 gap-1 sm:gap-2 md:grid-cols-3 lg:grid-cols-4'
    >
      {
        techsSorted.map(([tech, count]) => (
          <TechItem tech={tech} count={count} url={`/techs/${tech}`}/>
        ))
      }
    </div>
  </Main>
</BaseLayout>
